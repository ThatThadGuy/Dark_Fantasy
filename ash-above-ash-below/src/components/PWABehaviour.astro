---
// This component handles PWA registration and update prompts.
// It is intended to be used in the BaseLayout.
---
<script>
  import { registerSW } from 'virtual:pwa-register';

  const updateSW = registerSW({
    onNeedRefresh() {
      // Show a prompt to the user asking them to refresh to get the new version.
      if (confirm('A new version of the site is available. Reload?')) {
        updateSW(true);
      }
    },
    onOfflineReady() {
      // Notify the user that the app is ready for offline use.
      console.log('App is ready to work offline.');
    },
  });
</script>
